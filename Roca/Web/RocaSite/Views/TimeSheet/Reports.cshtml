<style type="text/css">
    .exportLinkContainer {
        text-align: right;
    }
</style>
<div class="container-fluid">
    <div class="row form-group">
        <div class="btn-group">
            <label class="btn btn-primary" ng-model="Model.Report" btn-radio="'ByDoc'" ng-change="reportChanged()">Por Documento</label>
            <label class="btn btn-primary" ng-model="Model.Report" btn-radio="'ByTask'" ng-change="reportChanged()">Por Actividad</label>
            <label class="btn btn-primary" ng-model="Model.Report" btn-radio="'BySpecialty'" ng-change="reportChanged()">Por Disciplina</label>
            <label class="btn btn-primary" ng-model="Model.Report" btn-radio="'ByProject'" ng-change="reportChanged()">Por Proyecto</label>
        </div>
    </div>
    <div class="row form-group">
            <div class="col-md-2">
                <label class="control-label small" for="fromDate">Desde</label>
                <p class="input-group">
                    <input type="text" name="fromDate" class="form-control input-sm" ng-model="Model.Filter.FromDate" tabindex="1" ng-change="filterChanged()"
                           datepicker-popup="yyyy-MM-dd" show-weeks="false" is-open="Model.FromDatePickerOpened"
                           close-text="Cerrar" current-text="Hoy" clear-text="Borrar" toggle-weeks-text="Semanas" close-text="Aceptar" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default btn-sm" ng-click="openDatePicker($event, 'FromDatePickerOpened')"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            </div>
            <div class="col-md-2">
                <label class="control-label small" for="toDate">Hasta</label>
                <p class="input-group">
                    <input type="text" name="fromDate" class="form-control input-sm" ng-model="Model.Filter.ToDate" tabindex="2" ng-change="filterChanged()"
                           datepicker-popup="yyyy-MM-dd" show-weeks="false" is-open="Model.ToDatePickerOpened"
                           close-text="Cerrar" current-text="Hoy" clear-text="Borrar" toggle-weeks-text="Semanas" close-text="Aceptar" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default btn-sm" ng-click="openDatePicker($event, 'ToDatePickerOpened')"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            </div>
    </div>
    <div class="row">
        <div id="grid" style="width: 900px; height: 500px; border: 1px solid rgb(212,212,212);" ng-grid="Model.gridOptions">
        </div>
        <div class="exportLinkContainer" style="width: 900px;">
            
        </div>
    </div>
</div>
<script type="text/javascript">
    (function () {
        Roca.fillParentHeight('grid', '70%');
        })();
</script>