<div>
    <form name="mlForm" novalidate >  
        <div class="col-lg-3" >
            <div class="form-group" ng-class="{'has-error': mlForm.DocNumber.$invalid}">       
                <label class="control-label small" for="DocNumber">Documento</label>
                <input class="form-control input-sm" ng-model="Model.Ml.DocNumber" name="DocNumber" ng-readonly="true"/>
            </div>

            <div class="form-group" ng-class="{'has-error': mlForm.Title.$invalid}">       
                <label class="control-label small" for="Title">Titulo</label>
                <input class="form-control input-sm" ng-model="Model.Ml.Title" name="Title" ng-readonly="true"/>
            </div>
            
            <div class="form-group">       
                <label class="control-label small" for="ProjectName">Proyecto</label>
                <input class="form-control input-sm" ng-model="Model.Ml.ProjectName" name="ProjectName" ng-readonly="true"/>
            </div>   
            
            <div class="form-group" ng-class="{'has-error': mlForm.Revision.$invalid}">       
                <label class="control-label small" for="Revision">Revision</label>
                <input class="form-control input-sm" ng-model="Model.Ml.Revision" name="Revision" ng-readonly="true"/>
            </div>  
            
            <div class="form-group" ng-class="{'has-error': mlForm.Specialty.$invalid || Model.Ml.SpecialtyId <= 0}">       
                <label class="control-label small" for="Specialty">Especialidad</label>
                <input class="form-control input-sm" ng-model="Model.Ml.SpecialtyName" name="Specialty" ng-readonly="true"/>
            </div>
            
            <div class="form-group">       
                <label class="control-label small" for="StatusDescription">Estado</label>
                <input class="form-control input-sm" ng-model="Model.Ml.StatusDescription" name="StatusDescription" ng-readonly="true"/>
            </div> 
        </div>

        <div class="col-lg-3">
            <div class="form-group">       
                <label class="control-label small" for="CreatorShowName">Autor</label>
                <input class="form-control input-sm" ng-model="Model.Ml.CreatorShowName" name="CreatorShowName" ng-readonly="true"/>
            </div>
            
            <div class="form-group" ng-class="{'has-error': mlForm.Revisor.$invalid}">       
                <label class="control-label small" for="Revisor">Revisor</label>
                <input class="form-control input-sm" ng-model="Model.Ml.RevisorShowName" name="Revisor" ng-readonly="true"/>
            </div>   
            
            <div class="form-group" ng-class="{'has-error': mlForm.Purpose.$invalid}">       
                <label class="control-label small" for="Purpose">Proposito</label>
                <input class="form-control input-sm" ng-model="Model.Ml.Purpose" name="Purpose" ng-readonly="true"/>
            </div>

            <div ng-include="'MaterialList/ActionsPanel'"  ng-controller="MlActionsPanelController" onload="Id = Model.id; Mode = 'View'; " ></div>    
        </div>
    </form>
</div>