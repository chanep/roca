<style>
    .docType {
        width: 80px;
    }
    .select {
        width: 150px;
    }
    .docNumber {
        width: 300px;
    }
    .docTitle {
        width: 500px;
    }   
</style>

<form name="docForm" novalidate>
    <div class="container-fluid">
       
        <div class="form-group select" ng-class="{'has-error': docForm.Specialty.$invalid}">       
            <label class="control-label small" for="Specialty">Especialidad</label>
            <select class="form-control input-sm" name="Specialty" ie-select-fix ng-model="Model.Doc.SpecialtyId" 
                    ng-options="sp.Id as sp.Name for sp in Model.Options.Specialties" required>
            </select>
        </div>
        
        <div class="form-group select" ng-class="{'has-error': docForm.Project.$invalid}">       
            <label class="control-label small" for="Specialty">Proyecto</label>
            <select class="form-control input-sm" name="Project" ie-select-fix ng-model="Model.ProjectId" ng-change="projectChanged()"
                    ng-options="p.Id as p.ShortName for p in Model.Options.Projects" required>
            </select>
        </div>
        
        <div class="form-group select" ng-class="{'has-error': docForm.Subproject.$invalid}" ng-show="subprojectVisible()">       
            <label class="control-label small" for="Subproject">Subproyecto</label>
            <select class="form-control input-sm" name="Subproject" ie-select-fix ng-model="Model.Doc.ProjectId" 
                    ng-options="p.Id as p.ShortName for p in Model.Subprojects" required>
            </select>
        </div>
        
        <div class="form-group docType" ng-class="{'has-error': docForm.Type.$invalid}">       
            <label class="control-label small" for="Type">Tipo</label>
            <select class="form-control input-sm" name="Type" ie-select-fix ng-model="Model.Doc.TypeId"
                    ng-options="t.Id as t.Code for t in Model.Options.DocTypes | orderBy:'Code'"  required>
            </select>
        </div>
        
        <div class="form-group docNumber" ng-class="{'has-error': docForm.DocNumber.$invalid}">       
            <label class="control-label small" for="DocNumber">Codigo de Documento</label>
            <input class="form-control input-sm" ng-model="Model.Doc.DocNumber" name="DocNumber" required/>
        </div> 
        
        <div class="form-group docTitle" ng-class="{'has-error': docForm.Title.$invalid}">       
            <label class="control-label small" for="Title">Titulo</label>
            <input class="form-control input-sm" ng-model="Model.Doc.Title" name="Title" required/>
        </div>  
        
        <div>
            <button type="button" ng-click="submit()"class="btn btn-primary" ng-disabled="docForm.$invalid">Agregar</button> 
            <p style="color: green; font-weight: bold;" ng-show="Model.Saved && !docForm.$dirty">Agregado!</p>  
            <p style="color: red; font-weight: bold;" ng-show="Model.ShowError && !docForm.$dirty">{{Model.Error}}</p> 
        </div>         

    </div>

</form>