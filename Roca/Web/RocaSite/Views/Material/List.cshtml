<div id="gridHeader">
    <fieldset>
        <legend>Filtros</legend>
        <div class="col-lg-3">
            <label class="control-label small">Descripcion:</label>
            <div class="right-inner-addon">
                <i class="glyphicon glyphicon-search"></i>
                <input class="form-control input-sm" type="search" ng-model="Model.Filter.Description" ng-change="filterChange()" data-ng-change-delay="300"/>     
            </div>           
        </div>
    </fieldset> 
</div>
<div id="matGrid" style="border: 1px solid rgb(212,212,212);" ng-grid="Model.gridOptions">
</div>
<script type="text/javascript">
    //funcion autoinvocada para que las variables no sean globales sino internas
    (function () {
        Roca.fillParentHeight('matGrid', '95%');
        Roca.setWidth('matGrid', '95%');       
        $('#gridHeader').width($('#matGrid').width());      
    })();    
</script>